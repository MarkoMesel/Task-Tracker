@using TaskTracker.Models
@model IEnumerable<TaskTracker.Web.Models.TodoTask>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <a class="btn @(ViewData["CurrentStatus"]?.ToString() == "" ? "btn-primary" : "btn-outline-secondary")"
           asp-action="Index" asp-route-status="">All</a>
        <a class="btn @(ViewData["CurrentStatus"]?.ToString() == TaskStatuses.Done ? "btn-primary" : "btn-outline-secondary")"
           asp-action="Index" asp-route-status="@TaskStatuses.Done">Done</a>
        <a class="btn @(ViewData["CurrentStatus"]?.ToString() == TaskStatuses.Pending ? "btn-primary" : "btn-outline-secondary")"
           asp-action="Index" asp-route-status="@TaskStatuses.Pending">Pending</a>
    </div>
    <div>
        <a class="btn btn-success" asp-action="Create">Create New</a>
    </div>
</div>

<div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach (var task in Model)
    {
        var cardClass = task.IsDone ? "bg-light text-decoration-line-through" : "bg-white";
        <div class="col">
            <div class="card @cardClass h-100">
                <div class="card-body">
                    <h5 class="card-title">@task.Title</h5>
                    <p class="card-text">@task.Description</p>
                    <p class="card-text"><small class="text-muted">Due: @(task.DueDate?.ToString("MMM dd, yyyy") ?? "No due date")</small></p>
                    <p class="card-text">
                        Status: @(task.IsDone ? "Done" : "Pending")
                    </p>
                    <a asp-action="Edit" asp-route-id="@task.Id" class="btn btn-sm btn-outline-primary">Edit</a>
                    <a asp-action="Details" asp-route-id="@task.Id" class="btn btn-sm btn-outline-secondary">Details</a>
                    <a asp-action="Delete" asp-route-id="@task.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                </div>
            </div>
        </div>
    }
</div>
